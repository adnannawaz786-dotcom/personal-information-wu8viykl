# Environment Variables for Personal Information Onboarding Portal

# Application Configuration
VITE_APP_NAME=Personal Information Portal
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=User-friendly onboarding portal with step-by-step guided experience

# Development Configuration
VITE_NODE_ENV=development
VITE_PORT=5173
VITE_HOST=localhost

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000
VITE_API_VERSION=v1

# Authentication & Security
VITE_JWT_SECRET=your-jwt-secret-key-here
VITE_SESSION_TIMEOUT=3600000
VITE_ENCRYPTION_KEY=your-encryption-key-here

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
VITE_UPLOAD_ENDPOINT=/upload

# Form Configuration
VITE_FORM_AUTO_SAVE=true
VITE_FORM_AUTO_SAVE_INTERVAL=30000
VITE_FORM_VALIDATION_DEBOUNCE=500

# Progress Tracking
VITE_ENABLE_ANALYTICS=false
VITE_PROGRESS_SAVE_INTERVAL=5000

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ANIMATION_DURATION=300

# Email Configuration (for notifications)
VITE_EMAIL_SERVICE_URL=http://localhost:3002/email
VITE_ENABLE_EMAIL_NOTIFICATIONS=false

# Storage Configuration
VITE_STORAGE_TYPE=localStorage
VITE_STORAGE_PREFIX=personal_info_portal_

# Feature Flags
VITE_ENABLE_STEP_VALIDATION=true
VITE_ENABLE_PROGRESS_PERSISTENCE=true
VITE_ENABLE_FORM_RECOVERY=true
VITE_ENABLE_REAL_TIME_VALIDATION=true

# Error Tracking
VITE_ENABLE_ERROR_REPORTING=false
VITE_ERROR_REPORTING_URL=

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_PERFORMANCE_API_URL=